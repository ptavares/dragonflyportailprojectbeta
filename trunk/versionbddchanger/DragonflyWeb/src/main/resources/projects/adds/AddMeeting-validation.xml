<!DOCTYPE validators PUBLIC 
"-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="subj">
		<field-validator type="requiredstring">
			<message key="meetings.creates.subjectLengthError"></message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">1</param>
			<param name="maxLength">40</param>
			<message key="meetings.creates.subjectLengthError" />
		</field-validator>
	</field>
	<field name="start">
		<field-validator type="requiredstring">
			<message key="meetings.creates.dateError"></message>
		</field-validator>
	</field> 
	<field name="descr">
		<field-validator type="stringlength">
			<param name="minLength">0</param>
			<param name="maxLength">255</param>
			<message key="meetings.creates.decrLengthError" />
		</field-validator>
	</field> 
</validators>